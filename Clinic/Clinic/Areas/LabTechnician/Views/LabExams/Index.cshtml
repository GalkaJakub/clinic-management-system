
@model List<LabExam>


<div class="container mt-4">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h3 class="mb-4">Lab Exams</h3>
        </div>
        <div class="row mb-4">
            <div class="col-md-6">
                <form class="d-flex align-items-stretch" asp-action="Index" asp-controller="LabExams">
                    <input name="searchString" class="form-control me-2" type="search"/>
                    <button class="btn btn-primary me-2" type="submit">Search</button>
                    <a asp-controller="LabExams" asp-action="Index" class="btn btn-secondary">Clear</a>
                </form>
            </div>
        </div>


        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover table-striped align-middle border rounded">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Request Date</th>
                        <th scope="col">Exam Date</th>
                        <th scope="col">Status</th>
                        <th scope="col">Lab technician name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var labExam in Model)
                    {
                        <tr>
                            <td>@(labExam.RequestDate)</td>
                            <td>@(labExam.ExamDate)</td>
                            <td>@(labExam.Status)</td>
                            <td>@(labExam.LabTechnician.ApplicationUser.Name != null ? labExam.LabTechnician.ApplicationUser.Name : "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

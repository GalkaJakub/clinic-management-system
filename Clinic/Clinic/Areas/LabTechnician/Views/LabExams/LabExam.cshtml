@model LabExamVM


<h2>Lab Exam Details</h2>

<form asp-action="UpdateLabExam" method="post">
    <input type="hidden" asp-for="LabExam.LabExamId" />

    <div class="mb-3">
        <label asp-for="LabExam.DoctorsNotes" class="form-label">Doctor Notes</label>
        <textarea asp-for="LabExam.DoctorsNotes" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="LabExam.HeadLabNotes" class="form-label">Head Lab Notes</label>
        <textarea asp-for="LabExam.HeadLabNotes" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="LabExam.Result" class="form-label">Result</label>
        <textarea asp-for="LabExam.Result" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Exam Selection</label>
        <input class="form-control" value="@Model.ExamSelection?.Name" disabled />
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="DeleteLabExam" asp-route-labExamId="@Model.LabExam.LabExamId" class="btn btn-danger">
            Delete Exam
        </a>

        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>

@model IEnumerable<Clinic.Models.Appointment>

@{
    ViewData["Title"] = "My Appointments";
}

<div class="container mt-4">
    <h3 class="mb-4">My Appointments</h3>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover table-striped align-middle border rounded mt-4 mb-4">
            <thead class="table-light">
                <tr>
                    <th scope="col">Pacjent</th>
                    <th scope="col">Data wizyty</th>
                    <th scope="col">Status</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model.OrderByDescending(a => a.AppointmentDate))
                {
                    <tr>
                        <td>@appointment.Patient.Name @appointment.Patient.Surname</td>
                        <td>@appointment.AppointmentDate?.ToString("g")</td>
                        <td>@appointment.Status</td>
                        <td>
                            <a asp-action="UpdateAppointment" asp-route-id="@appointment.AppointmentId"
                               class="btn btn-outline-primary btn-sm">
                                Open
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
